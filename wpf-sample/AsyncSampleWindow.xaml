<Window x:Class="wpf_sample.AsyncSampleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_sample"
        mc:Ignorable="d"
        Title="AsyncSampleWindow" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <Button Content="Alert" HorizontalAlignment="Left"
                    Margin="5"
                    Height="20" 
                    Width="Auto" 
                    Click="OnButtonClick"/>
            <TextBlock Name="Message" Text="Ready ..." Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
