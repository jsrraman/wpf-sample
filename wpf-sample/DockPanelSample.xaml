<Window x:Class="wpf_sample.DockPanelSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_sample"
        mc:Ignorable="d"
        Title="DockPanelSample" Height="500" Width="500">
    <Grid>
        <DockPanel>
            <Button Height="25" Background="Red" DockPanel.Dock="Top"></Button>
            <Button Width="25" Background="Yellow" DockPanel.Dock="Left"></Button>
            <Button Height="25" Background="Green" DockPanel.Dock="Bottom"></Button>
            <Button Width="25" Height="Auto" Background="Orange" DockPanel.Dock="Right"></Button>
        </DockPanel>
    </Grid>
</Window>
