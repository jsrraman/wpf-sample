<Window x:Class="wpf_sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_sample"
        mc:Ignorable="d"
        Title="Sample WPF" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <GroupBox Header="Simple Controls">
                <WrapPanel Margin="0,5,0,0">
                    <Button Name="GridSample" Content="Grid Sample" Click="OnGridSampleClick" Margin="5"/>
                    <Button Name="StackPanelSample" Content="Stack Panel Sample" Click="OnStackPanelSampleClick" Margin="5,0,5,5"/>
                    <Button Name="WrapPanelSample" Content="Wrap Panel Sample" Click="OnWrapPanelSampleClick" Margin="5,0,5,5"/>
                    <Button Name="DockPanelSample" Content="Dock Panel Sample" Click="OnDockPanelSampleClick" Margin="5,0,5,5"/>
                    <Button Name="ControlsSample" Content="Controls Sample" Click="OnControlsSampleClick" Margin="5,0,5,5"/>
                    <Button Name="CanvasSample" Content="Canvas Sample" Click="OnCanvasSampleClick" Margin="5,0,5,5"/>
                    <Button Name="DataBindingOneWaySample" Content="DataBinding One Way Sample" Click="OnDataBindingOneWaySampleClick" Margin="5,0,5,5"/>
                    <Button Name="DataBindingTwoWaySample" Content="DataBinding Two Way Sample" Click="OnDataBindingTwoWaySampleClick" Margin="5,0,5,5"/>
                    <Button Name="DataBindingListsSample" Content="DataBinding Lists Sample" Click="OnDataBindingListsSampleClick" Margin="5,0,5,5"/>
                    <Button Name="ElementBindingSample" Content="Element Binding Sample" Click="OnElementBindingSampleClick" Margin="5,0,5,5"/>
                    <Button Name="DataConvertorSample" Content="Data Convertor Sample" Click="OnDataConvertorSampleClick" Margin="5,0,5,5" />
                </WrapPanel>
            </GroupBox>

            <GroupBox Header="Async Demo">
                <WrapPanel Margin="0,5,0,0">
                    <Button Name="AsyncSample" Content="Async Sample" Click="OnAsyncSampleClick" Margin="5" />
                </WrapPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
